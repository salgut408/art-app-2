<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/art_nav_graph"
    app:startDestination="@id/allArt">

    <fragment
        android:id="@+id/allArt"
        android:name="com.example.android.aicartapp.ui.fragments.allArt"
        android:label="allArt" >
        <action
            android:id="@+id/action_allArt_to_artDetail"
            app:destination="@id/artDetail"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/savedArt"
        android:name="com.example.android.aicartapp.ui.fragments.savedArt"
        android:label="savedArt" >
        <action
            android:id="@+id/action_savedArt_to_artDetail"
            app:destination="@id/artDetail"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/searchArt"
        android:name="com.example.android.aicartapp.ui.fragments.searchArt"
        android:label="searchArt" >
        <action
            android:id="@+id/action_searchArt_to_artDetail"
            app:destination="@id/artDetail"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/artDetail"
        android:name="com.example.android.aicartapp.ui.fragments.artDetail"
        android:label="artDetail" />
    <activity
        android:id="@+id/artActivity"
        android:name="com.example.android.aicartapp.ArtActivity"
        android:label="ArtActivity" />
</navigation>